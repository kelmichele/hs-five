<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
	    <meta name="description" content= "<%= @page_description %>">
	    <link rel="shortcut icon" href="/favicon.png">

	    <title>
	    	<% if current_page?(root_path) %>
	    		<%= @page_title  %>
	    		<% else %>
		    	<%= @page_title  %> | High Seas Design House
		    	<% end %>
	    </title>
		<%= csrf_meta_tags %>
		<!--[if lt IE 9]>
		  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
		  </script>
		<![endif]-->

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<% unless current_page?(photo_gallery_path) %> <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> <% end %>


		  <script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-41678323-1', 'auto');
		  ga('send', 'pageview');
		</script>
	</head>
	<body class=" <%= controller_name %> <%= action_name %>">
		<%= render 'layouts/header' %>
			<%= yield %>
		<%= render 'layouts/footer' %>
		<% if current_page?(photo_gallery_path) %> <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> <% end %>
	</body>
</html>



